<br>
<div class="booyah-box col-7">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br>
  <div class="text-center">
    <%= image_tag current_course.image, class: 'img-fluid' %>
  </div>
  <br>
  <br>
  <div class="text-center">
    <div class="btn-group" role="group">
      <%= link_to 'Add a new section', new_instructor_course_section_path(current_course), class: 'btn btn-success' %>
      <%= link_to 'Preview as student', course_path(current_course), class: 'btn btn-warning float-right' %>
    </div>
  </div>
  <br>
  <br>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-success btn-sm' %>
        <ul>
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <strong><%= lesson.title %></strong>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr">
      </li>
    <% end %>
  </ul>
</div>
