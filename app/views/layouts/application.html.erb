<!DOCTYPE html>
<html>
  <head>
    <title>CodeLaunchr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  </head>

  <body>
    <div id="flex-content-container">
      <!-- Start Navigation -->
      <nav class="navbar navbar-toggleable-md" style="background-color: #f5f5f5;">
      <!-- <nav class="navbar navbar-toggleable-md navbar-light bg-faded"> -->
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">CodeLaunchr ðŸš€</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                <i class="fa fa-sign-out"></i>
                  Sign out
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link' do %>
                <i class="fa fa-sign-in"></i>
                  Sign in
                <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link' do %>
                <i class="fa fa-user-plus"></i>
                  Sign up
                <% end %>
            </li>
          <% end %>
        </ul>
        </div>
      </nav>
      <!-- End Navigation -->

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <!-- Start Footer -->
    <div id="footer">
      <div class="container">
        <strong>Teachers</strong>
        <br>
        <%= link_to 'Teach a Course', new_instructor_course_path %>
      </div>
    </div>
    <!-- End Footer -->
  </body>
</html>
